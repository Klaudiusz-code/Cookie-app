<div class="container">
    <div class="selected">
        <h2 class="selected__title">Wybierz rodzaj ciastka</h2>
        <ul class="selected__wrapper">
            <li class="selected__cookie-item">
                {{#each bases}}
                    <a class="btn btn__base" href="/configurator/select-base/{{this.[0]}}">Wybierz {{this.[0]}} za {{this.[1]}}</a>
                {{/each}}
            </li>
        </ul>
    </div>
    <main class="main">
        <div class="main__addon">
            <ul class="main__addon-wrapper">
            {{#if cookie.base}}
                {{#each addons}}
                    {{#if (isNotOnArray @root.cookie.addons this.[0])}}
                    <li>
                        <a class="btn btn__addons" href="/configurator/add-addon/{{this.[0]}}">Dodaj {{this.[0]}} za {{this.[1]}} ZŁ</a>
                    </li>
                    {{/if}}
                {{/each}}
            {{/if}}
            </ul>
        </div>
        <div class="main__preview-container">
            {{#if cookie.base}}
                {{> cookie-preview}}
            {{/if}}
        </div>
        <div class="main__extra-container">
            {{#if cookie.base}}
                {{> addons}}
                <a href="/order/summary" class="btn btn__order">Zamów</a>
            {{/if}}
        </div>
    </main>

</div>
